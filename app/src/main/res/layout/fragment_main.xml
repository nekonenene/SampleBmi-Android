<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingBottom="@dimen/activity_vertical_margin"
				tools:showIn="@layout/activity_main"
				tools:context=".MainActivityFragment">
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="@string/height_label"
		android:id="@+id/heightLabel"
		android:layout_marginStart="38dp"
		android:layout_marginTop="45dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:typeface="monospace"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="@string/weight_label"
		android:id="@+id/weightLabel"
		android:layout_below="@+id/heightLabel"
		android:layout_alignStart="@+id/heightLabel"
		android:layout_marginTop="34dp"
		android:typeface="monospace"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:ems="5"
		android:maxLength="6"
		android:id="@+id/heightField"
		android:typeface="monospace"
		android:paddingLeft="6sp"
		android:paddingTop="4sp"
		android:paddingBottom="8sp"
		android:paddingRight="6sp"
		android:numeric="integer|decimal"
		android:layout_marginLeft="4sp"
		android:layout_marginRight="2sp"
		android:layout_alignBaseline="@+id/heightLabel"
		android:layout_alignBottom="@+id/heightLabel"
		android:layout_alignStart="@+id/button"
		android:inputType="numberDecimal"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:ems="5"
		android:maxLength="6"
		android:id="@+id/weightField"
		android:typeface="monospace"
		android:paddingLeft="6sp"
		android:paddingTop="4sp"
		android:paddingRight="6sp"
		android:paddingBottom="8sp"
		android:numeric="integer|decimal"
		android:layout_alignBaseline="@+id/weightLabel"
		android:layout_alignBottom="@+id/weightLabel"
		android:layout_toStartOf="@+id/heightUnitLabel"
		android:inputType="numberDecimal"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="@string/height_unit"
		android:id="@+id/heightUnitLabel"
		android:typeface="monospace"
		android:layout_marginStart="13dp"
		android:layout_alignTop="@+id/heightLabel"
		android:layout_toEndOf="@+id/heightField"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="@string/weight_unit"
		android:id="@+id/weightUnitLabel"
		android:layout_alignBottom="@+id/weightLabel"
		android:layout_alignStart="@+id/heightUnitLabel"
		android:typeface="monospace"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/start_calc_button"
		android:id="@+id/button"
		android:layout_below="@+id/weightField"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="68dp"
		android:textSize="20sp"
		android:padding="20dp"
		android:onClick="onCalcButton"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="BMI"
		android:id="@+id/bmiLabel"
		android:layout_marginTop="23dp"
		android:textAlignment="center"
		android:layout_below="@+id/button"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:textColor="@color/colorPrimaryDark"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Comment"
		android:id="@+id/commentLabel"
		android:layout_below="@+id/bmiLabel"
		android:layout_alignParentStart="true"
		android:layout_marginTop="32dp"
		android:layout_alignParentEnd="true"
		android:textAlignment="center"
		/>

</RelativeLayout>
