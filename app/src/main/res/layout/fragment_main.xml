<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingBottom="@dimen/activity_vertical_margin"
				tools:showIn="@layout/activity_main"
				tools:context=".MainActivityFragment">
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="@string/height_label"
		android:id="@+id/heightLabel"
		android:layout_marginStart="38dp"
		android:layout_marginTop="45dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:typeface="monospace"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="@string/weight_label"
		android:id="@+id/weightLabel"
		android:layout_below="@+id/heightLabel"
		android:layout_alignStart="@+id/heightLabel"
		android:layout_marginTop="34dp"
		android:typeface="monospace"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:inputType="number"
		android:ems="6"
		android:id="@+id/heightField"
		android:typeface="monospace"
		android:layout_alignBaseline="@+id/heightLabel"
		android:layout_alignBottom="@+id/heightLabel"
		android:layout_centerHorizontal="true"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:inputType="number"
		android:ems="6"
		android:id="@+id/weightField"
		android:typeface="monospace"
		android:layout_alignBaseline="@+id/weightUnitLabel"
		android:layout_alignBottom="@+id/weightUnitLabel"
		android:layout_toStartOf="@+id/heightUnitLabel"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="@string/height_unit"
		android:layout_marginStart="21dp"
		android:id="@+id/heightUnitLabel"
		android:typeface="monospace"
		android:layout_alignTop="@+id/heightLabel"
		android:layout_toEndOf="@+id/heightField"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="@string/weight_unit"
		android:id="@+id/weightUnitLabel"
		android:layout_alignBottom="@+id/weightLabel"
		android:layout_alignStart="@+id/heightUnitLabel"
		android:typeface="monospace"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/start_calc_button"
		android:id="@+id/button"
		android:layout_below="@+id/weightField"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="68dp"
		android:textSize="20dp"
		android:padding="20dp"/>

</RelativeLayout>
